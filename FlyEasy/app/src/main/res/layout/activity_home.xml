<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_box" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <RelativeLayout
        android:id="@+id/search_box"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bacground_border"
        app:layout_constraintBottom_toTopOf="@+id/card_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/toLocation"
            android:layout_width="103dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/fromLocation"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/to"
            android:textSize="8sp" />

        <EditText
            android:id="@+id/fromLocation"
            android:layout_width="103dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/from"
            android:textSize="8sp" />

        <EditText
            android:id="@+id/selectedDate"
            android:layout_width="103dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/toLocation"
            android:layout_marginEnd="17dp"
            android:ems="10"
            android:inputType="date"
            android:hint="@string/date"
            android:textSize="8sp" />

        <Switch
            android:id="@+id/priceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/fromLocation"
            android:layout_marginBottom="19dp"
            android:text="@string/price"
            android:textSize="8sp" />

        <Switch
            android:id="@+id/ratingSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/priceSwitch"
            android:layout_marginStart="86dp"
            android:text="@string/rating"
            android:textSize="8sp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/priceSwitch"
            android:layout_marginEnd="25dp"
            android:background="@android:drawable/ic_menu_search" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>