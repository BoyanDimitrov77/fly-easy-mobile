<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/hotel_card"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/hotel_picture"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_color="#0fffffff"
            app:civ_border_width="2dp"
            android:contentDescription="Hotel Picture"/>

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="11dp"
            android:lineSpacingExtra="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <Button
            android:id="@+id/button_info"
            android:layout_width="53dp"
            android:layout_height="31dp"
            android:layout_alignEnd="@+id/hotel_location"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/hotel_location"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/hotel_name"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/type_booked_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hotel_name"
            android:layout_centerVertical="true"
            android:text="@string/room_type" />

        <TextView
            android:id="@+id/type_booked_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="112dp" />

        <TextView
            android:id="@+id/price_hotel_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hotel_name"
            android:layout_below="@+id/type_booked_room_label"
            android:text="@string/price" />

        <TextView
            android:id="@+id/price_hotel_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/type_booked_room"
            android:layout_below="@+id/type_booked_room_label" />


    </RelativeLayout>

</android.support.v7.widget.CardView>